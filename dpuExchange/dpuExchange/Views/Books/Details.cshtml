@model dpuExchange.Models.Books

@{
    ViewBag.Title = Model.Title;
}

<div class="row">
<div class="span">
<fieldset>
    <legend>"@Model.Title" by @Model.Author</legend>

    <div class="display-label">Seller</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserID)
    </div>
    <div class="display-label">ISBN</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Isbn)
    </div>
    <div class="display-label">Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">Author</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Author)
    </div>

    <div class="display-label">Price</div>
    <div class="display-field">
        $@Html.DisplayFor(model => model.Price)
    </div>

    <div class="display-label">Condition</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Condition)
    </div>

    <div class="display-label">Comments</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Comments)
    </div>

    <div class="display-label">Posted On</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.PostDate)
    </div>
</fieldset>
<br />
<p>  
    @Html.ActionLink("Back to List", "Index")
</p>
</div>

<div class="row" style="margin-top:120px;">
<h5>Interested in this book? Let the seller know!</h5>
<a class="btn btn-warning btn-large" href="@Url.Action("RequestPage","Email", new { id = @Model.UserID, bookTitle = @Model.Title})">I'm Interested</a>
</div>
</div>